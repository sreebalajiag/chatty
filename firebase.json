{
  "hosting": {
    "public": "src",

    "headers": [
      {
        "source": "/**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache, no-store, must-revalidate"
          }
        ]
      }],
    "redirects": [ {
      "source": "/",
      "destination": "/index.html",
      "type": 301
    } ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  }
}
